<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:background="@drawable/repeat_background"
    android:layout_height="match_parent"
    tools:context=".Uploadktp">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/droidsans"
                android:text="Lampirkan data berikut untuk daftar sebagai anggota" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">
     <TextView
         android:layout_marginTop="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:fontFamily="@font/droidsans"
         android:text="1. Kartu Tanda Penduduk"/>
        <ImageView
            android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:id="@+id/imgupload"
        android:layout_marginBottom="20dp"
        android:src="@drawable/noimg"/>
            </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/droidsans"
                android:text="2. Kartu Keluarga"/>
            <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:id="@+id/imgupload2"
        android:scaleType="centerCrop"
        android:layout_marginBottom="20dp"
        android:src="@drawable/noimg"/>
            </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content">

            <TextView
         android:layout_width="match_parent"
         android:layout_marginTop="10dp"
         android:layout_height="wrap_content"
         android:text="3. Foto diri bersama dengan KTP "/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="200dp"
        android:id="@+id/imgupload3"
        android:fontFamily="@font/droidsans"
        android:scaleType="centerCrop"
        android:layout_marginBottom="5dp"
        android:src="@drawable/noimg"/>
            </RelativeLayout>
            </android.support.v7.widget.CardView>


            <com.rafakob.drawme.DrawMeButton
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_button"
                android:text="Simpan"
                android:textAllCaps="false"
                android:paddingLeft="110dp"
                android:drawablePadding="-110dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:theme="@style/PrimaryButton"
                android:drawableLeft="@drawable/ic_checked"
                app:dm_backColor="@color/colorAccent"
                app:dm_backColorPressed="#DF8400"
                app:dm_backColorDisabled="#DF8400"
                app:dm_radius="@dimen/radius_button"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>