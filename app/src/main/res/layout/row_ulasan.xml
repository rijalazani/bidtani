<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <!-- Column 1 -->
    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/placeholder_bg">
        <RelativeLayout
            android:id="@+id/testlayout"
            android:padding="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/nama"
                    android:text="Oleh Try Setyo Utomo"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/droidsans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/waktu"
                    android:text="1 Juli 2019"
                    android:layout_below="@id/nama"
                    android:textSize="12sp"
                    android:fontFamily="@font/droidsans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RatingBar
                    android:id="@+id/ratingKoperasi"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/waktu"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5" />

                <TextView
                    android:id="@+id/komen"
                    android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five"
                    android:layout_below="@id/ratingKoperasi"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/droidsans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
        </RelativeLayout>
    </android.support.design.card.MaterialCardView>



</RelativeLayout>