<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="match_parent"
    android:background="@drawable/repeat_background"
    tools:context=".DataNomor">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView12"
            android:fontFamily="@font/droidsans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No KTP" />

        <EditText
            android:id="@+id/etnoKTP"
            android:layout_width="match_parent"
            android:inputType="number"
            android:fontFamily="@font/droidsans"
            android:maxLength="16"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"

            android:hint="Isi No KTP" />
        <TextView
            android:id="@+id/tvnoKK"
            android:fontFamily="@font/droidsans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No KK" />

        <EditText
            android:id="@+id/etnoKK"
            android:fontFamily="@font/droidsans"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:inputType="number"
            android:maxLength="16"
            android:layout_height="wrap_content"
            android:hint="Isi No KK" />

        <TextView
            android:id="@+id/tvnoHP"
            android:fontFamily="@font/droidsans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No HP / Telp" />

        <EditText
            android:id="@+id/etnoHP"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:inputType="phone"
            android:fontFamily="@font/droidsans"
            android:maxLength="14"
            android:layout_height="wrap_content"
            android:hint="Isi No HP/ Telepon" />


        <com.rafakob.drawme.DrawMeButton
            android:id="@+id/btn_simpan_no"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:text="Simpan"
            android:textAllCaps="false"
            android:fontFamily="@font/droidsans"
            android:paddingLeft="110dp"
            android:drawablePadding="-110dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:singleLine="true"
            android:theme="@style/PrimaryButton"
            android:drawableLeft="@drawable/ic_checked"
            app:dm_backColor="@color/colorAccent"
            app:dm_backColorPressed="#DF8400"
            app:dm_backColorDisabled="#DF8400"
            app:dm_radius="@dimen/radius_button"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>