<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <!-- Column 1 -->
    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/placeholder_bg"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/LdetailKop"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@color/placeholder_bg"/>
                <TextView
                    android:id="@+id/nama_koperasi"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/droidsans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Nama Koperasi"/>

                <!--<TextView-->
                    <!--android:id="@+id/textViewOptions"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="right"-->
                    <!--android:gravity="right"-->
                    <!--android:text="&#8942;"-->
                    <!--android:textAppearance="?android:textAppearanceLarge" />-->


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/placeholder_bg" />

            <TextView
                android:id="@+id/status"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#000000"
                android:fontFamily="@font/droidsans"
                android:drawableLeft="@drawable/done"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="diterima"
                android:drawablePadding="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/placeholder_bg" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvajukan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droidsans"
                    android:text="Diajukan"/>
                <TextView
                    android:id="@+id/tgl_diterima"
                    android:layout_below="@+id/tvajukan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droidsans"
                    android:text="Tanggal"/>

                <TextView
                    android:id="@+id/txttotal"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droidsans"
                    android:text="Pinjaman"/>
                <TextView
                    android:id="@+id/tot_pinjam"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/txttotal"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droidsans"
                    android:text="0"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtditerima"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/droidsans"
                        android:text="Diterima Oleh"/>

                <TextView
                    android:id="@+id/diterima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/droidsans"
                    android:text="admin"/>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </android.support.design.card.MaterialCardView>



</RelativeLayout>