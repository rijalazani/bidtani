<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/thumbnail1"
            android:layout_width="3dp"
            android:layout_marginLeft="20dp"
            android:layout_height="85dp"
            android:background="@color/placeholder_bg" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.card.MaterialCardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/bullet1"
                app:cardBackgroundColor="@color/placeholder_bg"
                android:layout_width="40dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="40dp"
                app:strokeWidth="1dp"
                android:layout_height="40dp">

            </android.support.design.card.MaterialCardView>
        </LinearLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/thumbnail1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:background="@color/placeholder_bg"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/status_pengajuan"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/placeholder_bg"
                android:fontFamily="@font/droidsans"
                android:layout_height="wrap_content"
                android:text="Verifikasi Formulir Pengajuan"
                />
            <TextView
                android:id="@+id/tgl_status"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/placeholder_bg"
                android:fontFamily="@font/droidsans"
                android:layout_height="wrap_content"
                android:text="27 mei 2019"
                />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>